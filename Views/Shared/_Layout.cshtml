<!DOCTYPE html>
<html>

<head>
    <!-- Metadados -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Painel de Administração</title>
    <!-- Meta tag para design responsivo -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/bower_components/Ionicons/css/ionicons.min.css">
    <!-- Estilos do AdminLTE -->
    <link rel="stylesheet" href="~/dist/css/AdminLTE.min.css">
    <link rel="stylesheet" href="~/dist/css/skins/skin-blue.min.css">
    <!-- Fonte do Google -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    <!-- DataTables CSS -->
    <link href="https://cdn.datatables.net/v/dt/dt-1.13.8/datatables.min.css" rel="stylesheet">
</head>

<body class="hold-transition sidebar-mini" style="background-color: #616961">
    <div class="wrapper">
        <!-- Cabeçalho Principal -->
        <header class="main-header">
            <!-- Logo -->
            <a asp-controller="Home" asp-action="Index" class="logo" style=" margin-top: 7px">
                <!-- Mini logotipo para barra lateral -->
                <span style="color: #36BA2B" class="logo-mini">IFMA </span>
                <!-- Logotipo para estado regular -->
                <span style="color: #36BA2B;" class="logo-lg">IFMA:  <strong>Monografias</strong></span>
            </a>
            <!-- Navegação do Cabeçalho -->
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Botão de alternância da barra lateral-->
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button" style="color: #36BA2B;font-size: 30px;">
                    <span class="sr-only">Alternar navegação</span>
                </a>
                <!-- Menu de Navegação Direita -->
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <!-- Menu de Conta do Usuário -->
                        <li class="dropdown user user-menu">
                            <!-- Botão de Alternância de Menu -->
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <!-- A imagem do usuário na barra de navegação -->
                                <img src="~/imgs/usuario.png" class="user-image" alt="Usuário">
                                <!-- hidden-xs oculta o nome de usuário em dispositivos pequenos, mostrando apenas a imagem. -->
                                <span class="hidden-xs">Macoratti</span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- A imagem do usuário no menu -->
                                <li class="user-header">
                                   
                                    <p>
                                        Macoratti - Macoratti.net
                                        <small>Membro desde Nov. 2002</small>
                                    </p>
                                </li>
                                <!-- Corpo do Menu -->
                                <li class="user-body">
                                    <div class="row">
                                        <div class="col-xs-4 text-center">
                                            <a href="#">Conta</a>
                                        </div>
                                    </div>
                                    <!-- /.row -->
                                </li>
                                <!-- Rodapé do Menu -->
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a href="#" class="btn btn-default btn-flat">Perfil</a>
                                    </div>
                                    <div class="pull-right">
                                        <a href="#" class="btn btn-default btn-flat">Sair</a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- Coluna do Lado Esquerdo. Contém o logotipo e a barra lateral -->
        <aside class="main-sidebar">
            <!-- Barra lateral: o estilo pode ser encontrado em sidebar.less -->
            <section class="sidebar">
               
                <!-- Menu da Barra Lateral -->
                @Html.Partial("_MainMenu")
                <!-- /.sidebar-menu -->
            </section>
            <!-- /.sidebar -->
        </aside>
        <!-- Área de Conteúdo. Contém o conteúdo da página -->
        <div class="content-wrapper" style="padding:30px 40px 30px 40px; background-color: #F0FFFF">
            <!-- Cabeçalho do Conteúdo (Cabeçalho da Página) -->
            @RenderBody()
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Rodapé Principal -->
        <footer class="main-footer">
            <!-- Posiciona à esquerda por padrão -->
            <strong> 2023 - Sig Monografias Ifma - <a href="https://github.com/marcosreiss/MonografiasIfma.git">Código Aberto</a>.</strong>
        </footer>
    </div>
    <!-- ./wrapper -->
    <!-- SCRIPTS JS NECESSÁRIOS -->
    <!-- jQuery 3 -->
    <script src="~/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/dist/js/adminlte.min.js"></script>
    <!-- DataTables jQuery -->
    <script src="https://cdn.datatables.net/v/dt/dt-1.13.8/datatables.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>
