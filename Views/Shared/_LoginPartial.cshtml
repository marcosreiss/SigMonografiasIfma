@using Microsoft.AspNetCore.Identity
@inject SignInManager<Funcionario> SingInManager

    <head>




        <style>
            #singed-user
            {
                display: flex;
                align-items: center;
                padding: 10px;
                cursor: pointer;
            }

            

            #container-dropdown{
            position: relative;
            display: inline-block;
            }

        #reis-dropdown{
            background-color: gray ;
            font-size: 20px;
        }
        #reis-dropdown li, #reis-dropdown a {
            font-size:17.6px;
        }

        </style>

    

    </head>

@if (SingInManager.IsSignedIn(User))
{
    <a class="dropdown-toggle" data-toggle="dropdown" id="singed-user" style="background-color: #616961">

        <img src="~/imgs/usuario.png" class="user-image" alt="Usuário" id="user-img">

        <h6><span class="badge badge-light hidden-xs">
            
            Bem Vindo @User.Identity.Name
            <i class="fa-solid fa-caret-down" style="color: black; padding-left:10px"></i>
        </span></h6>
        
        
    </a>

    <ul class="dropdown-menu" id="reis-dropdown" >


        <!-- Rodapé do Menu -->
        <li class="user-header">


            <div class="btn pull-left">



                <a href="#" class="btn btn-default ">
                    <i class="fa-solid fa-user" style="color: #36BA2B;"></i>
                    Perfil
                </a>
            </div>


            <div class="btn pull-right">
                <a asp-controller="Funcionario" asp-action="Logout" class="btn btn-default btn-flat">
                    <i class="fa-solid fa-right-from-bracket" style="color: #36BA2B;"></i>
                    Sair
                </a>
            </div>

        </li>

    </ul>
    
    
    
